<%= form_for(:party, :url => { :controllers => 'parties', :action => 'create' }) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :begin_hour %>
    <%= f.number_field :begin_hour %>

    <%= f.label :artist %>
    <%= f.text_field :artist %>

    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.label :adress %>
    <%= f.text_field :adress %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit %>
<% end %>