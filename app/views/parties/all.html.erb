<% provide(:title, "All events") %>

<div class="row">
	<div class="jumbotron col-md-12">
		<h1>All events</h1>
		<br/>
		<!-- Liste des parties -->
		<% @parties.each_with_index do |party, index| %>
			<div class="col-lg-6">
				<h4><a class="alert alert-success" href="/parties/<%= party.id %>"><%= party.name %></a></h4>
				<br/>
				Host : <a href="/users/<%= @party_creator[index].id %>"><%= @party_creator[index].login %></a><br/>
				Date : <%= party.date %><br/>
				At : <%= party.adress %><br/>
				<i><%= party.description %></i><br/>
				<strong><%= @subscribers_by_party[index] %></strong> people will participate !
				<hr>
			</div>
		<% end %>
	</div>
</div>
