<div class="row">
	<div class="jumbotron col-md-12">
		<!-- Affichage des informations concernant un utilisateur -->
		<h1>Profile of <%= @user.login %></h1>
		<p> Email : <%= @user.email %></p>
		<!-- Affichage des soirées qu'il a créées -->
		<h2>Events of <%= @user.login %></h2>
		<% if @created_parties.blank? %>
			This user hasn't created any event yet !
		<% else %>
			<% @created_parties.each_with_index do |p, index| %>
				<div class="col-md-3">
					<h3><a href="parties/<%= p.id %>"><%= p.name %></a></h3>
					<p>
						<%= p.date %><br/>
						<%= p.adress %><br/>
						<% if @suscribers.present? && @suscribers[index].present? %>
						Number of suscribers : <%= @suscribers[index].size %><br/>
						<% end %>
					</p>
				</div>
			<% end %>
		<% end %>
	</div>
</div>