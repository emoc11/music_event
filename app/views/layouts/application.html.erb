<!DOCTYPE html>
<html>
<head>
  <title>MusicEvent</title>
  <%= stylesheet_link_tag "main", "bootstrap" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Verification connecté/deconnecté et affichage en fonction -->
  <% if current_user.present?  # Si utilisateur non connecté %>
    <nav class="navbar navbar-default">
      <div class="buttons">
        <%= button_to "Home", {:controller=>"parties", :action=>"index"}, :method => :get, class: "btn btn-success"  %>
        <%= button_to "Create a party", {:controller=>"parties", :action=>"new"}, :method => :get, class: "btn btn-warning"  %>
        <%= button_to "Edit my profile", {:controller=>"users", :action=>"edit"}, :method => :get, class: "btn btn-info"  %>
        <%= button_to "Disconnect", {:controller=>"sessions", :action=>"destroy"}, :method => :delete, class: "btn btn-danger"  %>
      </div>
    </nav>
  <% end %>

  <!-- Affichage des vues partielles -->
  <div class="container">
    <!-- design pour les message "flash", souvent retour de formulaires -->
    <% if !flash.blank? %>
      <div class="alert alert-warning">
      <% flash.each do |message_type, message| %>
        <%= message %>
      <% end %>
    </div>
    <% end %>
    
    <%= yield %>
  </div>
  <!-- Affichage de l'environnement de débug, à suppr avant prod -->
  <!-- <%= debug(params) if Rails.env.development? %> -->

</body>
</html>